<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/grey"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="230dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_food"
            android:scaleType="centerCrop"
            android:layout_width="240dp"
            app:riv_corner_radius_bottom_right="10dp"
            app:riv_corner_radius_bottom_left="10dp"
            android:layout_height="140dp"
            android:src="@drawable/banner_food2">
        </com.makeramen.roundedimageview.RoundedImageView>

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_below="@id/img_food"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blue_grey"
                android:text="Chili chess dog" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:text="40" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/layout1"
            android:layout_width="wrap_content"
            android:layout_marginEnd="75dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_star"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/txt_star"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/txt_timeValue"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/blue_grey"
                android:layout_toLeftOf="@id/imageView5"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15min" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_alignParentEnd="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/time" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_add_to_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plus_bg"
            android:src="@drawable/ic_plus"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>