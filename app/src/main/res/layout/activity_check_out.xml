<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CheckOutActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/arrow"
            app:tint="@color/blue_grey" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/blue_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/layout1"
        android:background="@color/grey_btn_enable"/>

    <ScrollView
        android:layout_below="@id/view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingBottom="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_shipping_address"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location" />
                <TextView
                    android:id="@+id/txt19"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/imageView7"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_grey"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ nhận hàng" />


                <TextView
                    android:id="@+id/txt_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/imageView7"
                    android:layout_below="@id/txt19"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_grey"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:text="Thiện Minh" />


                <TextView
                    android:id="@+id/txt_phone_number"
                    android:layout_toEndOf="@id/txt_name"
                    android:layout_below="@id/txt19"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/blue_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0123456789" />

                <TextView
                    android:id="@+id/txt_shipping_address"
                    android:layout_below="@id/txt_name"
                    android:layout_toEndOf="@id/imageView7"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/blue_grey"
                    android:textSize="14sp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="68 Định Công, Hoàng Mai, Hà Nội" />

                <ImageView
                    android:id="@+id/img_extend_shipping_address"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_extend_setting" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey_btn_enable"/>

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_grey"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Phương pháp vận chuyển" />

                <RelativeLayout
                    android:paddingVertical="8dp"
                    android:background="@color/grey"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_checkbox_checked_1" />

                    <RelativeLayout
                        android:id="@+id/layout"
                        android:layout_toEndOf="@id/imageView9"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView14"
                            android:textColor="@color/blue_grey"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giao hàng tiêu chuẩn" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:layout_toEndOf="@id/textView14"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content"
                            android:text="3-5 ngày" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_below="@id/layout"
                        android:layout_toEndOf="@id/imageView9"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5.00" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey_btn_enable"/>

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/blue_grey"
                    android:textStyle="bold"
                    android:text="Phương thức thanh toán" />


                <RadioGroup
                    android:id="@+id/rdo_group_payment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/rdo_payment_nhan_hang"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Thanh toán khi nhận hàng" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_btn_enable"/>
                    <RadioButton
                        android:id="@+id/rdo_payment_card"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:checked="true"
                        android:text="Thẻ/tài khoản ngân hàng" />
                </RadioGroup>

                <androidx.cardview.widget.CardView
                    android:id="@+id/layout_card_number"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/payment_dark"
                    android:elevation="8dp"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/logo_master_card" />

                        <TextView
                            android:id="@+id/txt_card_number"
                            android:textColor="@android:color/white"
                            android:layout_toEndOf="@id/imageView2"
                            android:layout_centerVertical="true"
                            android:textSize="18sp"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="**** **** **** XXXX" />

                        <ImageView
                            android:id="@+id/img_edit_card_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:tint="@color/white" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey_btn_enable"/>

            <RelativeLayout
                android:id="@+id/layout_voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Áp dụng phiếu giảm giá"
                    android:textStyle="bold"
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txt_voucher_count"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 phiếu giảm giá: "
                    android:layout_below="@id/textView3"
                    android:textColor="@color/blue_grey"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txt_voucher_count"
                    android:text="-5.00"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:layout_below="@id/textView3"
                    android:textColor="@color/red"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_extend_setting" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey_btn_enable"/>

            <RelativeLayout
                android:id="@+id/layout_count_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các mặt hàng đã đặt"
                    android:textStyle="bold"
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txt_count_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 mặt hàng"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/textView"
                    android:textColor="@color/blue_grey"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_extend_setting" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey_btn_enable"/>

            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_label_sum_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/blue_grey"
                        android:text="Tổng phụ:" />

                    <TextView
                        android:id="@+id/txt_sum_price"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/blue_grey"
                        android:text="80.00" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/blue_grey"
                        android:text="Phí vận chuyển:" />

                    <TextView
                        android:id="@+id/txt_phi_van_chuyen"
                        android:layout_alignParentEnd="true"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.00" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/blue_grey"
                        android:text="Giảm giá:" />

                    <TextView
                        android:id="@+id/txt_sum_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="- 0.00"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/blue_grey"
                        android:text="Tổng thanh toán:" />

                    <TextView
                        android:id="@+id/txt_total1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$5.00"
                        android:textColor="@color/blue_grey"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey_btn_enable"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/txt_label_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Tổng thanh toán: "
            android:layout_centerVertical="true"
            android:textColor="@color/blue_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_total2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80.00"
            android:layout_toEndOf="@id/txt_label_total"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <ProgressBar
            android:id="@+id/progress_bar_total"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateTint="@color/red"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txt_label_total"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_order"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_bg"
            android:text="Đặt hàng"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>
        

</RelativeLayout>