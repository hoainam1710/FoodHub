<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminOrderDetailActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:background="@color/red"
        android:paddingHorizontal="15dp"
        android:layout_alignParentTop="true"
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:srcCompat="@drawable/arrow"
            android:layout_centerVertical="true"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textView31"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin đơn hàng" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:background="@color/light_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_order_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/banner_food2" />

        <RelativeLayout
            android:layout_toEndOf="@id/img_avatar_order_user"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_user"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:layout_below="@id/txt_name_user"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_order_id"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:textColor="@color/blue_grey"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/layout3"
        android:layout_below="@id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="70dp"
        tools:ignore="UselessLeaf">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingVertical="12dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ic_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_phone"
                    app:tint="@color/red" />

                <TextView
                    android:id="@+id/txt_phone_number"
                    android:layout_marginStart="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/blue_grey"
                    android:layout_toEndOf="@id/ic_phone"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_btn_enable"/>

            <RelativeLayout
                android:paddingVertical="12dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ic_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_email"
                    app:tint="@color/red" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_marginStart="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/blue_grey"
                    android:layout_toEndOf="@id/ic_email"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_btn_enable"/>

            <RelativeLayout
                android:paddingVertical="12dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ic_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_location"
                    app:tint="@color/red" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_marginStart="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/blue_grey"
                    android:layout_toEndOf="@id/ic_location"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_btn_enable"/>

            <RelativeLayout
                android:paddingVertical="12dp"
                android:paddingHorizontal="15dp"
                android:background="@color/grey_btn_enable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_name_food"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textColor="@color/blue_grey"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Món ăn" />

                <TextView
                    android:id="@+id/txt_quantity"
                    android:textSize="14sp"
                    android:textColor="@color/blue_grey"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng" />

                <TextView
                    android:id="@+id/txt_price"
                    android:textSize="14sp"
                    android:textColor="@color/blue_grey"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tạm tính" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_list_food_order"
                android:scrollbars="none"
                android:paddingLeft="15dp"
                android:paddingEnd="7dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_btn_enable"/>

            <LinearLayout
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/blue_grey"
                    android:textStyle="bold"
                    android:text="Phương thức thanh toán" />

                    <TextView
                        android:id="@+id/txt_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Thẻ/tài khoản ngân hàng" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/layout_card_number"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/payment_dark"
                    android:elevation="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/logo_master_card" />

                        <TextView
                            android:id="@+id/txt_card_number"
                            android:textColor="@android:color/white"
                            android:layout_toEndOf="@id/imageView2"
                            android:layout_centerVertical="true"
                            android:textSize="18sp"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="**** **** **** XXXX" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_btn_enable"/>

            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_label_sum_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/blue_grey"
                        android:text="Tổng phụ:" />

                    <TextView
                        android:id="@+id/txt_sum_price"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/blue_grey"
                        android:text="0.0" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/blue_grey"
                        android:text="Phí vận chuyển:" />

                    <TextView
                        android:id="@+id/txt_delivery"
                        android:layout_alignParentEnd="true"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/blue_grey"
                        android:text="Giảm giá:" />

                    <TextView
                        android:id="@+id/txt_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="-0.00"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/blue_grey"
                        android:text="Tổng thanh toán:" />

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="$0.0"
                        android:textColor="@color/blue_grey"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:background="@color/grey"
        android:paddingHorizontal="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_order"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/btn_cancel_admin_active_order_bg"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Hủy" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_accept_order"
            android:background="@drawable/btn_accept_order_admin_active_order_bg"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Xác nhận" />

        <TextView
            android:id="@+id/txt_status"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Trạng thái"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>



</RelativeLayout>