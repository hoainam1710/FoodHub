<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_food"
                android:layout_width="60dp"
                app:riv_corner_radius="8dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_food2"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_toEndOf="@id/img_food"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:textColor="@color/blue_grey"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_quantity"
                android:layout_toEndOf="@id/img_food"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:layout_below="@id/txt_name"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/blue_grey"
                android:layout_height="wrap_content"
                android:text="Chất lượng sản phẩm" />

            <RatingBar
                android:id="@+id/rating_star"
                android:numStars="5"
                android:isIndicator="false"
                android:stepSize="1"
                android:clickable="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:progressTint="#FFC107"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tệ"
                android:textSize="16sp"
                android:visibility="gone"
                android:textColor="@color/blue_grey"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="120dp"
                android:ems="10"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:maxLines="5"
                android:background="@drawable/edt_review_bg"
                android:hint="Viết đánh giá"
                android:layout_marginTop="15dp"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm hình ảnh"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue_grey"/>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_image_review"

                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/add_image"
                    android:layout_toEndOf="@id/rcv_image_review"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:background="@drawable/ic_camera_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_camera"
                        app:tint="@android:color/black" />
                </RelativeLayout>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gửi" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>