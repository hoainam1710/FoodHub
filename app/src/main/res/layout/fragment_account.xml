<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".fragments.AccountFragment">

    <RelativeLayout
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:textColor="@color/blue_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ sơ" />

        <ImageView
            android:id="@+id/img_log_out"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logout" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingVertical="15dp"
        android:paddingHorizontal="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/banner_food2" />

        <LinearLayout
            android:layout_toRightOf="@id/img_avatar"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/blue_grey"
                android:textSize="16sp"
                android:text="Bruno Pham" />

            <TextView
                android:id="@+id/txt_email"
                android:textSize="14sp"
                android:textColor="@color/blue_grey"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prunopham123@gmail.com" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_my_order"
        android:layout_width="match_parent"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:layout_marginVertical="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:textColor="@color/blue_grey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử đặt hàng" />

            <TextView
                android:id="@+id/txt_content_my_order"
                android:layout_below="@id/text"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lich sử và thông tin đơn hàng" />

            <ImageView
                android:id="@+id/img_extend_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_extend_setting" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_my_review"
        android:layout_width="match_parent"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:textColor="@color/blue_grey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá của tôi" />

            <TextView
                android:id="@+id/txt_2"
                android:layout_below="@id/text1"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết đánh giá sản phẩm" />

            <ImageView
                android:id="@+id/img_extend_my_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_extend_setting" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_shipping_address"
        android:layout_width="match_parent"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text2"
                android:textColor="@color/blue_grey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhận hàng" />

            <TextView
                android:id="@+id/txt_content_shipping_address"
                android:layout_below="@id/text2"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn có 2 địa chỉ" />

            <ImageView
                android:id="@+id/img_extend_shippint_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_extend_setting" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_payment"
        android:layout_width="match_parent"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text3"
                android:textColor="@color/blue_grey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản ngân hàng" />

            <TextView
                android:id="@+id/txt_content_payment"
                android:layout_below="@id/text3"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn có 2 tài khoản" />

            <ImageView
                android:id="@+id/img_extend_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_extend_setting" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_setting"
        android:layout_width="match_parent"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text4"
                android:textColor="@color/blue_grey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt" />

            <TextView
                android:id="@+id/txt_content_setting"
                android:layout_below="@id/text4"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin người dùng" />

            <ImageView
                android:id="@+id/img_extend_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_extend_setting" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>