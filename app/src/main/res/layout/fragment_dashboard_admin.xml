<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".fragments.DashboardAdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:translationZ="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp">

                    <RelativeLayout
                        android:id="@+id/item1"
                        android:layout_centerVertical="true"
                        android:background="@drawable/item_icon_in_dashboard_bg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:ignore="UselessParent">
                        <TextView
                            android:id="@+id/txt_total_order_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_grey"
                            android:textSize="18sp"
                            android:text="0"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/item1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_order_manager"
                            app:tint="@color/blue_grey" />

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_grey"
                            android:textSize="14sp"
                            android:text="Tổng đơn hàng"/>
                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginEnd="15dp"
                android:translationZ="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp">

                    <RelativeLayout
                        android:id="@+id/item2"
                        android:layout_centerVertical="true"
                        android:background="@drawable/item_icon_in_dashboard_bg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/txt_total_customer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_grey"
                            android:textSize="18sp"
                            android:text="0"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/item2"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_account"
                            app:tint="@color/blue_grey" />

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_grey"
                            android:textSize="14sp"
                            android:text="Tổng người dùng"/>
                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:translationZ="4dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp">

                    <RelativeLayout
                        android:id="@+id/item3"
                        android:layout_centerVertical="true"
                        android:background="@drawable/item_icon_in_dashboard_bg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/txt_total_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_grey"
                            android:textSize="18sp"
                            android:text="0"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/item3"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_food_manager"
                            app:tint="@color/blue_grey" />

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_grey"
                            android:textSize="14sp"
                            android:text="Tổng món ăn"/>
                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:translationZ="4dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_width="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp">

                    <RelativeLayout
                        android:id="@+id/item4"
                        android:layout_centerVertical="true"
                        android:background="@drawable/item_icon_in_dashboard_bg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/txt_total_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_grey"
                            android:textSize="18sp"
                            android:text="0"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/item4"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_menu_review"
                            app:tint="@color/blue_grey" />

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_grey"
                            android:textSize="14sp"
                            android:text="Tổng đánh giá"/>
                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </GridLayout>


        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="20dp"
            android:translationZ="4dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_grey"
                    android:text="Thông kê đơn hàng" />


                <RelativeLayout
                    android:id="@+id/layout_order_manager"
                    android:translationZ="3dp"
                    android:background="@drawable/header_chart_order_manager_bg"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_total_order2"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:paddingHorizontal="30dp"
                            android:paddingVertical="5dp"
                            android:background="@drawable/chart_quantity_order_manager_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>


                    <TextView
                        android:id="@+id/textView32"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/blue_grey"
                        android:layout_toEndOf="@id/txt_total_order2"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng đơn hàng" />

                    <ImageView
                        android:id="@+id/textView33"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_extend_setting"
                        app:tint="@color/blue_grey" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/btn_7_bg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_order_completed"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/blue_grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />

                            <TextView
                                android:id="@+id/textView37"
                                android:textSize="14sp"
                                android:textColor="@color/blue_grey"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hoàn thành" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="12dp"
                        android:backgroundTint="@color/btn_6_bg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_order_active"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/blue_grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />

                            <TextView
                                android:id="@+id/textView39"
                                android:textSize="14sp"
                                android:textColor="@color/blue_grey"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chờ xác nhận" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/btn_8_bg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_order_canceled"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/blue_grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />

                            <TextView
                                android:id="@+id/textView35"
                                android:textSize="14sp"
                                android:textColor="@color/blue_grey"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đã hủy" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</ScrollView>