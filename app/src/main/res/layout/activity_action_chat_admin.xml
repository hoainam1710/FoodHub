<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ActionChatAdminActivity">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:paddingVertical="12dp"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/arrow"
            app:tint="@color/white"
            tools:ignore="ContentDescription" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar"
                    app:civ_border_color="@color/white"
                    android:layout_toEndOf="@id/img_back"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/avatar_default" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/img_avatar"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="FoodHub" />

        <ImageView
            android:id="@+id/img_back_to_home"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_home"
            app:tint="@color/white"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_message"
        android:layout_below="@id/layout_header"
        android:layout_above="@id/layout_bottom"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_alignParentBottom="true"
        android:paddingVertical="15dp"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_message"
            app:errorEnabled="false"
            app:hintEnabled="false"
            app:endIconMode="clear_text"
            android:layout_toStartOf="@id/img_send"
            app:boxCollapsedPaddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_message"
                android:background="@drawable/bg_edt_message"
                android:layout_width="match_parent"
                android:gravity="start|center_vertical"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:textColor="@color/blue_grey"
                android:paddingVertical="8dp"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:paddingHorizontal="12dp"
                android:hint="Soáº¡n tin..." />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/img_send"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_sent_message"
            app:tint="@color/red"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


</RelativeLayout>