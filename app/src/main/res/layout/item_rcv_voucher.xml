<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_voucher" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imageView8"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_grey"
                android:text="BestDeal: 20%" />

            <TextView
                android:id="@+id/txt_discount_and_minAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:layout_marginTop="5dp"
                android:text="Giảm 10%, đơn tối thiều 10$"/>

            <TextView
                android:id="@+id/txt_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:text="Mã: vn01" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:text="1/12/2024 23:59 - 30/12/2024 23h59" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:text="Cho toàn bộ sản phẩm" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbo_checked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>