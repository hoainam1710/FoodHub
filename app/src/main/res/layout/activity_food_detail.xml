<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FoodDetailActivity">

    <ScrollView
        android:layout_marginBottom="80dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_food"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:srcCompat="@drawable/banner_food2" />

            <RelativeLayout
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"
                android:layout_height="40dp"
                android:background="@drawable/layout_favorite_bg">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/arrow"
                    app:tint="@color/blue_grey"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_cart"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"
                android:layout_height="40dp"
                android:background="@drawable/layout_favorite_bg">

                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_basket_4"
                    tools:ignore="ContentDescription"
                    app:tint="@color/blue_grey" />

                <RelativeLayout
                    android:id="@+id/layout_cart_number"
                    android:layout_toEndOf="@id/img_cart"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/button_bg"
                    android:layout_width="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_height="18dp">
                    <TextView
                        android:id="@+id/txt_cart_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/img_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="330dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/layout_favorite_bg"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/img_icon_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_favorite"
                    app:tint="@color/red" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_title"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_food"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/blue_grey"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="Chili cheese dog" />

                <TextView
                    android:id="@+id/txt_timeValue"
                    android:layout_marginEnd="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/blue_grey"
                    android:layout_toStartOf="@id/imageView3"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10min" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/time" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/layout1"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_price"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100$" />

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginStart="30dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_increase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/quantity_bg"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_quantity"
                            android:layout_width="20dp"
                            android:text="1"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/txt_reduce"
                            android:layout_width="wrap_content"
                            android:text="-"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/quantity_bg"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_below="@id/layout1"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:textColor="@color/blue_grey"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiáº¿t" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_below="@id/textView9"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txt_description"
                android:background="@color/grey_btn_enable"/>

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_below="@id/view4"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_grey"
                    android:text="ÄÃ¡nh giÃ¡ sáº£n pháº©m" />

                <RelativeLayout
                    android:layout_below="@id/textView29"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RatingBar
                        android:id="@+id/rating_star"
                        android:numStars="5"
                        android:rating="4.5"
                        android:stepSize="0.1"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:isIndicator="true"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:progressTint="#FFC107"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_rating"
                        android:layout_toEndOf="@id/rating_star"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5/5" />

                    <TextView
                        android:id="@+id/txt_number_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_grey"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/txt_rating"
                        android:text="(0 review)" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_view_all_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/ic_extend_setting"
                    android:drawableTint="@color/red"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="Xem táº¥t cáº£"
                    tools:ignore="UseCompatTextViewDrawableXml" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_list_review"
                android:layout_marginTop="15dp"
                android:scrollbars="none"
                android:layout_below="@id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Tá»ng tiá»n"
                android:textColor="@color/blue_grey"/>

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100$"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blue_grey"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_add_to_cart"
            android:backgroundTint="@color/red"
            android:layout_width="wrap_content"
            android:paddingHorizontal="12dp"
            android:drawableStart="@drawable/cart"
            android:drawablePadding="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="ThÃªm vÃ o giá» hÃ ng"/>
    </RelativeLayout>


</RelativeLayout>