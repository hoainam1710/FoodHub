<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingVertical="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:text="Hủy đơn hàng" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/enable2"/>

    <LinearLayout
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/blue_grey"
            android:textAlignment="center"
            android:text="Bạn có chắc chắn muốn hủy đơn hàng không?" />

        <TextView
            android:id="@+id/textView21"
            android:textAlignment="center"
            android:textColor="@color/blue_grey"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nếu đồng ý thanh toán của bạn sẽ được hoàn trả một cách an toàn. Điều khoản và điều kiện được áp dụng." />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_no"
            android:background="@drawable/button_bg_2"
            android:layout_width="150dp"
            android:textColor="@color/red"
            android:layout_height="wrap_content"
            android:text="Không đồng ý" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_yes"
            android:background="@drawable/button_bg"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Đồng ý" />
    </RelativeLayout>
</LinearLayout>